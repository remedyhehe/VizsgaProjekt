<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Name="Page"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="collabears.Views.DetailPage">

    <VerticalStackLayout Spacing="20" Padding="20">

        <!-- Fejléc -->
        <Grid ColumnDefinitions="*,Auto,*" Padding="0,10">
            <!-- Bal oldal üres (későbbre) -->
            <StackLayout Orientation="Horizontal" Grid.Column="0" />

            <!-- Középső: Cím -->
            <StackLayout Orientation="Horizontal" Grid.Column="1" HorizontalOptions="Center">
                <Label 
                    Text="Collabears Admin Panel"
                    FontSize="24"
                    FontAttributes="Bold"
                    TextColor="#ff6900"
                    VerticalOptions="Center" />
                <Label 
                    Text=" [BETA]"
                    FontSize="24"
                    FontAttributes="Bold"
                    TextColor="Red"
                    VerticalOptions="Center" />
            </StackLayout>

            <!-- Jobb oldal: Gombok -->
            <StackLayout Orientation="Horizontal" Grid.Column="2" HorizontalOptions="End" Spacing="10">
                <Button Text="Profile" BackgroundColor="#ff6900" TextColor="White" CornerRadius="8" />
                <Button Text="Exit" BackgroundColor="#cc0000" TextColor="White" CornerRadius="8" />
            </StackLayout>
        </Grid>

        <!-- Tartalom -->
        <ScrollView>
            <HorizontalStackLayout Spacing="30" HorizontalOptions="Center" Padding="0,40,0,0">

                <!-- Bal oszlop: Felhasználók -->
                <Frame CornerRadius="20"
                       Padding="20"
                       HasShadow="True"
                       BackgroundColor="#1d293d"
                       MinimumWidthRequest="500">

                    <VerticalStackLayout Spacing="20">
                        <Label Text="Users"
                               FontSize="20"
                               FontAttributes="Bold"
                               HorizontalOptions="Center"
                               TextColor="#ff6900"/>

                        <CollectionView ItemsSource="{Binding Users}">
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Grid ColumnDefinitions="Auto,*,Auto" Padding="10">
                                        <Label Text="{Binding Id}"
                                               VerticalOptions="Center"
                                               TextColor="#f1f1f1"
                                               Grid.Column="0"/>

                                        <Label Text="{Binding Name}"
                                               VerticalOptions="Center"
                                               TextColor="#f1f1f1"
                                               Grid.Column="1"
                                               Margin="10,0"/>

                                        <Button Text="View"
                                                BackgroundColor="#ff6900"
                                                TextColor="White"
                                                CornerRadius="8"
                                                Command="{Binding BindingContext.UserActionCommand, Source={x:Reference Name=Page}}"
                                                CommandParameter="{Binding .}"
                                                Grid.Column="2"/>
                                    </Grid>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </VerticalStackLayout>
                </Frame>

                <!-- Jobb oszlop: Projektek -->
                <Frame CornerRadius="20"
                       Padding="20"
                       HasShadow="True"
                       BackgroundColor="#1d293d"
                       MinimumWidthRequest="500">
                                <VerticalStackLayout Spacing="20">
                        <Label Text="Projects"
                               FontSize="20"
                               FontAttributes="Bold"
                               HorizontalOptions="Center"
                               TextColor="#ff6900" />

                        <CollectionView ItemsSource="{Binding Projects}">
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Grid ColumnDefinitions="Auto,*,Auto" Padding="10">
                                        <Label Text="{Binding Id}"
                                               VerticalOptions="Center"
                                               TextColor="#f1f1f1"
                                               Grid.Column="0"/>

                                        <Label Text="{Binding Name}"
                                               VerticalOptions="Center"
                                               TextColor="#f1f1f1"
                                               Grid.Column="1"
                                               Margin="10,0"/>

                                        <Button Text="View"
                                                BackgroundColor="#ff6900"
                                                TextColor="White"
                                                CornerRadius="8"
                                                Command="{Binding BindingContext.ProjectActionCommand, Source={x:Reference Name=Page}}"
                                                CommandParameter="{Binding .}"
                                                Grid.Column="2"/>
                                    </Grid>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </VerticalStackLayout>
                </Frame>

            </HorizontalStackLayout>
        </ScrollView>
    </VerticalStackLayout>
</ContentPage>
