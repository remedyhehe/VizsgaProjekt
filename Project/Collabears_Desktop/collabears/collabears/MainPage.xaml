<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="collabears.MainPage">

    <Grid>
        <ScrollView>
            <VerticalStackLayout
                Padding="30,0"
                Spacing="25">
                <!-- ... az eddigi tartalmad változatlanul marad ... -->
                <Image
                    Source="maci.png"
                    HeightRequest="185"
                    Aspect="AspectFit" />
                <VerticalStackLayout
                    MaximumWidthRequest="500"
                    Spacing="25">

                    <Label Text="Welcome!" Style="{StaticResource Headline}" />
                    <Label Text="Welcome to the admin panel of CollaBears" Style="{StaticResource SubHeadline}" />

                    <Label Text="Email" />
                    <Entry x:Name="emailEntry" Placeholder="Email" />
                    <Label Text="Password" />
                    <Entry x:Name="passwordEntry" Placeholder="******" IsPassword="True" />

                    <Button
                        x:Name="CounterBtn"
                        Text="Login"
                        Clicked="OnCounterClicked"
                        HorizontalOptions="Fill" />
                </VerticalStackLayout>
            </VerticalStackLayout>
        </ScrollView>

        <!-- Töltőképernyő réteg -->
        <Grid x:Name="LoadingOverlay"
              BackgroundColor="#80000000"
              IsVisible="False"
              VerticalOptions="FillAndExpand"
              HorizontalOptions="FillAndExpand"
              ZIndex="10">

            <ActivityIndicator
                IsRunning="True"
                Color="White"
                VerticalOptions="Center"
                HorizontalOptions="Center"
                WidthRequest="50"
                HeightRequest="50" />
        </Grid>
    </Grid>
</ContentPage>
